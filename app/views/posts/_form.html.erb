<%= form_for @post, url: posts_path, html: { multipart: true } do |form| %>
  <% if post.errors.any? %>
    <div id='error_explanation'>
      <h2><%= pluralize(post.errors.count, 'error') %> prohibited this post from being saved:</h2>

      <ul>
      <% post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class='field form-group'>
    <%= form.label :image %>
    <%= form.file_field :image %>
  </div>

  <div class='field form-group'>
    <%= form.label :name %>
    <%= form.text_field :name, id: :post_name, class: 'form-control' %>
  </div>

  <div class='field form-group'>
    <%= form.label :title %>
    <%= form.text_field :title, id: :post_title, class: 'form-control' %>
  </div>

  <div class='field form-group'>
    <%= form.label :content %>
    <%= form.text_area :content, id: :post_content, class: 'form-control' %>
  </div>

  <div class='actions'>
    <%= form.submit %>
  </div>
<% end %>
