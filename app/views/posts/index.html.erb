<p id="notice"><%= notice %></p>

<% @posts.each do |post| %>
  <div class="card bg-light">
    <%= image_tag post.image.url(:large), class: 'card-img-top' %>
    <div class="card-body">
      <h5 class="card-title"><%= post.title %></h5>
      <p class="card-text"><%= post.content %></p>
    </div>
    <div class="card-body d-flex">
      <div class="p-2">
        <button class="btn btn-large btn-info">Bid</button>
      </div>
      <div class="p-2">
        <button class="btn btn-large btn-success">Buy Now</button>
      </div>
      <div class="p-2">
        <button class="btn btn-small btn-outline-primary"><%= link_to 'View', post, class: 'text-primary view-hover' %></button>
      </div>
      <div class="p-2">
        <button class="btn btn-small btn-outline-info"><%= link_to 'Edit', edit_post_path(post), class: 'text-info view-hover' %></button>
      </div>
      <div class="p-2">
        <button class="btn btn-small btn-outline-danger"><%= link_to 'Delete', post, method: :delete, data: { confirm: 'Are you sure?' }, class: 'text-danger view-hover' %></button>
      </div>
    </div>
  </div>
  <br>
<% end %>


 