<div class="container feed">
  <div class="d-flex flex-column">
  <% @posts.each do |post| %>
    <div class="card bg-light">
      <%= image_tag post.image.url(:large), class: 'card-img-top' %>
      <div class="card-body">
        <h5 class="card-title"><%= post.title %></h5>
        <p><strong>Vendor:</strong> <%= post.get_user_full_name(post.user_id) %></p>
        <p class="card-text"><%= post.content %></p>
      </div>
      <div class="card-body">
        <div class="row p-2">
          <div class="col-4">
            <button class="btn btn-lg btn-danger btn-block">Bid</button>
          </div>
          <div class="col-4">
            <button class="btn btn-lg btn-success btn-block">Buy Now</button>
          </div>
          <div class="col-4">
            <button class="btn btn-lg btn-info btn-block">More Info</button>
          </div>
        </div>
        <% if current_user %>
          <div class="row p-2">
            <div class="col-4">
              <%= link_to 'View', post, class: 'btn btn-lg btn-outline-primary btn-block' %>
            </div>
            <div class="col-4">
              <%= link_to 'Edit', edit_post_path(post), class: 'btn btn-lg btn-outline-info btn-block' %>
            </div>
            <div class="col-4">
              <%= link_to 'Delete', post, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-lg btn-outline-danger btn-block' %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
  </div>
</div>



 